<div class="container">
	<form method="post">
		<div>
			{{#if state}} {{state}} {{else}} <br> {{/if}}
		</div>

		<div class="form-group row" >
			<h3 class="col-sm-10 ">Modify Existing Pokemon Trainer</h3>
		</div>

		<div class="form-group row">
			<label  class="col-sm-2 col-form-label">Trainer</label>
			<div class="col-sm-5">
				<select name="TrainerID">
					<option value="None">---</option>
					{{#each trainer}}
						<option value="{{this.ID}}">{{this.Name}}</option>
					{{/each}}
				</select>
			</div>
		</div>

		<div class="form-group row">
			<label  class="col-sm-2 col-form-label">Name</label>
			<div class="col-sm-5">
				<input type="text" name="Name" class="form-control" maxlength="20" required>
			</div>
		</div>

		<div class="form-group row">
			<label  class="col-sm-2 col-form-label">Gender</label>

			<div class="form-check checkbox-inline">
				<input class="form-check-input" type="radio" name="Gender" id="inlineRadio1" value="0" required>
				<label class="form-check-label">Male</label>
			</div>

			<div class="form-check checkbox-inline">
				<input class="form-check-input" type="radio" name="Gender" id="inlineRadio2" value="1">
				<label class="form-check-label">Female</label>
			</div>
		</div>

		<div class="form-group row">
			<label  class="col-sm-2 col-form-label">Money</label>
			<div class="col-sm-5">
				<input type="number" name="Money" class="form-control">
			</div>
		</div>

		<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		<a href="/" id="cancel" name="cancel" class="btn btn-default" value="cancel">Cancel</a>
	</form>
</div>
