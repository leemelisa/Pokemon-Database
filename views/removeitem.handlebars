<div class="container">
	<form method="post">
		<div>
			{{#if state}} {{state}} {{else}} <br> {{/if}}
		</div>
		
		<div class="form-group row" >
			<h3 class="col-sm-10">Delete Information for a Item</h3>
		</div>

		<div class="form-group row">
			<label  class="col-sm-2 col-form-label">Item</label>
			<div class="col-sm-5">
				<select name="ItemID">
					<option value="None">---</option>
					{{#each item}}
						<option value="{{this.ID}}">{{this.Name}}</option>
					{{/each}}
				</select>
			</div>
		</div>

		<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		<a href="/" id="cancel" name="cancel" class="btn btn-default" value="cancel">Cancel</a>
	</form>
</div>
