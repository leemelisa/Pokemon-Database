<div class="container">
	<br>
	
	<p>
		<h3><center>Pokemon in Your Database</center></h3>

		<table class="table">
			<thead>
				<tr>
					{{#each sqlCol}}
					<th scope="col">{{this.name}}</th>
					{{/each}}
				</tr>
			</thead>
			
			<tbody>
				{{#each sqlResult}}
					<tr>
					<th scope="row">{{this.ID}}</th>
					<td><a href="?key=SpeciesName&value='{{this.SpeciesName}}'">{{this.SpeciesName}}</a></td>
					<td><a href="?key=Number&value={{this.Number}}">{{this.Number}}</a></td>
					<td><a href="?key=Nickname&value='{{this.Nickname}}'">{{this.Nickname}}</a></td>
					<td><a href="?key=Level&value={{this.Level}}">{{this.Level}}</a></td>
					<td><a href="?key=Gender&value={{this.Gender}}">{{this.Gender}}</a></td>
					<td><a href="?key=TrainerID&value={{this.TrainerID}}">{{this.TrainerID}}</a></td>
					</tr>    	
				{{/each}}
			</tbody>
		</table>
		
		{{#if filter}}
			<a href="/browsepokemon" class="btn btn-primary">Reset filter</a>
		{{/if}}
		
		<em>*Note: Gender 1 = Male, and 2 = Female</em>
		
	</p>
</div>


