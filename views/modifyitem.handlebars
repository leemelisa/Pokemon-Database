<div class="container">
    <form method="post">
            <div>
                {{#if state}} {{state}} {{else}} <br> {{/if}} 
            </div>
 
			<div class="form-group row" >
				<h3 class="col-sm-10">Modify Existing Item</h3>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Item</label>
				<div class="col-sm-5">
					<select name="ItemID" class="form-control">
						<option value="None">-- None --</option>
						{{#each item}}
							<option value="{{this.ID}}">{{this.Name}}</option>
						{{/each}}
					</select>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Name</label>
				<div class="col-sm-5">
					<input type="text" name="Name" class="form-control" maxlength="20" required>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Action Type</label>
				<div class="col-sm-5">
					<input type="number" name="ActionType" class="form-control" min="1" required>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Action Value</label>
				<div class="col-sm-5">
					<input type="number" name="ActionValue" class="form-control" required>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Description</label>
				<div class="col-sm-5">
					<input type="text" name="Description" class="form-control" maxlength="256" required>
				</div>
			</div>

		<button type="submit" id="submit" class="btn btn-primary">Submit</button>
		<a href="/" id="cancel" name="cancel" class="btn btn-default" value="cancel">Cancel</a>
	</form>
</div>

